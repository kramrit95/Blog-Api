package com.codewithamrit.blog.services;

import java.util.List;

import com.codewithamrit.blog.model.Post;
import com.codewithamrit.blog.payloads.PostDto;

public interface PostService {
	
	//create
	PostDto createPost(PostDto postDto,Integer userId,Integer categoryId);
	//update
	Post updatePost(PostDto postDto,Integer userId);//fun(newdata,olduserid)
	
	// get all post  by id
	
	PostDto getPostById(Integer postId);
	
	//get  all  post
	List<PostDto> getAllposts();
	
	// delete post
	void delete(Integer postId);
	
	//get post by category
	List<PostDto> getPostsByCategory(Integer categoryId);
	
	//get all post by user
	List<PostDto> getPostsByUser(Integer userId);
	//search post
	List<Post> serchPosts(String keyword);

}
